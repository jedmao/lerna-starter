{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "allowBranch": ["master"],
      "commitHooks": false,
      "conventionalCommits": true,
      "message": "chore(release): [skip ci]"
    }
  }
}
